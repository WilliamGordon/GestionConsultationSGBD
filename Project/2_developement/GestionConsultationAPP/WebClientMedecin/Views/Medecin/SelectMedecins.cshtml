@model IEnumerable<Models.Medecin>

@{
    ViewBag.Title = "SelectMedecins";
}
<br />
<h2>Sélectionner un médecin</h2>
<br />
<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Firstname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lastname)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Medecin_ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Firstname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lastname)
        </td>
        <td>
            <button type="button" class="btn btn-primary" onclick="location.href='/Medecin/GetAllPresenceForMedecin/@Html.DisplayFor(modelItem => item.Medecin_ID)';">Choisir médecin</button>
        </td>
    </tr>
}
</table>
